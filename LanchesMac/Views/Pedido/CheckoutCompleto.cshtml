@* exibir informações sobre um pedido completo após o processo de checkout *@
@model Pedido

<div class="container marginTop1">

    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>
    @* elemento div da classe "card" que é frequentemente usado para exibir informações em um cartão estilizado. *@
    <div class="card">
        @* parte do corpo do cartão onde as informações do pedido são apresentadas. *@
        <div class="card-body">
            @* exibi os dados *@
            <p>Cliente : <strong>@Model.Nome</strong>
            <p>Data do Pedido :  <strong>@Model.PedidoEnviado</strong>
            <p>Número do Pedido   : <strong>@Model.PedidoId</strong></p>
            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>
                @* inicia um loop *@
                @foreach (var item in Model.PedidoItens)
                {
                    <tr>
                        <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Lanche.Nome</td>
                        <td>@item.Lanche.Preco</td>
                    </tr>
                }
            </table>
            @* o valor total do pedido é exibido em preto, o valor é obtido da ViewBag e é formatado como um valor monetário. *@
            <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <h3>
        @* link de retorno que direciona o usuário de volta para a página inicial. *@
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>
